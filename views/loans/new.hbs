<h1>loan this book</h1>

<form method="post" action="/loans/new/{{locals.book.id}}" class="snippet">
    <input hidden name="book_id" value="{{locals.book.id}}" />
    <label for="title">title:</label>
    
    <input type="text" name="book_title" value="{{locals.book.title}}"></input>
    <label for="friend">friend:</label>
    <select id="friends" name="friends" required>
        <option value="">select</option>
        {{#each locals.friends}}
            <option name="{{this.id}}" value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <button type="submit">Submit</button>
</form>